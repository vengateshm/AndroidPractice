<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">

    <com.android.vengateshm.androidpractice.app_clones.whatsapp.BorderedCircle
        android:id="@+id/vProfilePicBg"
        android:layout_width="68dp"
        android:layout_height="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@id/vProfilePicBg"
        app:layout_constraintEnd_toEndOf="@id/vProfilePicBg"
        app:layout_constraintStart_toStartOf="@id/vProfilePicBg"
        app:layout_constraintTop_toTopOf="@id/vProfilePicBg" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/vProfilePicBg"
        app:layout_constraintStart_toStartOf="@+id/vProfilePicBg"
        app:layout_constraintTop_toBottomOf="@id/vProfilePicBg" />
</androidx.constraintlayout.widget.ConstraintLayout>